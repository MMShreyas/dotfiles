

# Common
alias c='clear'
alias ..='cd ..'
alias search="ps aux|grep -i"
alias reload=". ~/.zshrc && echo 'ZSH config reloaded from ~/.zshrc'"
alias please=sudo
alias week='date +%V'

#fun
alias starwars="telnet towel.blinkenlights.nl"
alias nyan='nc -v nyancat.dakko.us 23'

# System
alias s='systemctl status'
alias sstart='systemctl start'
alias sstop='systemctl stop'

# Packages
alias appinstall="sudo apt-get install"
alias appsearch="apt-cache show"


alias update="sudo apt-get update"

# Dev
alias mysql="sudo service mysql start"
alias apache="sudo service apache2 start"
alias up="mysql & apache"
alias webserver="python -m SimpleHTTPServer"
alias myip="dig +short myip.opendns.com @resolver1.opendns.com"

# Laravel
alias art="php artisan"
alias arts="php artisan serve"
alias artr="php artisan route:list"
alias artm="art migrate"
alias artm:r="art migrate:rollback"
alias artm:s="art migrate:status"

# Rails
alias rails="/usr/local/bin/rails"

# Vagrant
alias up="vagrant up"
alias down="vagrant halt"
alias connect="ssh vagrant@127.0.0.1 -p 2222"

# Projects
alias lar='cd ~/Development/Laravel'
alias railsd='cd ~/Development/Rails'
alias hms='cd ~/Development/Laravel/hms'


