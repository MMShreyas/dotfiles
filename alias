

# Common
alias c='clear'
alias s=sudo
alias ..='cd ..'
alias search="ps aux|grep -i"
alias reload=". ~/.zshrc && echo 'ZSH config reloaded from ~/.zshrc'"

# Utilities
alias week='date +%V'
alias myip="dig +short myip.opendns.com @resolver1.opendns.com"
alias webserver="python -m SimpleHTTPServer"

# fun
alias starwars="telnet towel.blinkenlights.nl"
alias nyan='nc -v nyancat.dakko.us 23'

# System
alias sts='systemctl status'
alias srt='systemctl start'
alias stp='systemctl stop'
alias appi="sudo apt-get install"
alias apps="apt-cache show"
alias appupd="sudo apt-get update"
alias appupg="sudo apt-get update && sudo apt-get updrade"

# Projects
alias lard='cd ~/Code/Laravel'
alias railsd='cd ~/Code/Rails'

# Laravel
alias art="php artisan"
alias arts="php artisan serve"
alias artr="php artisan route:list"
alias artm="art migrate"
alias artm:r="art migrate:rollback"
alias artm:s="art migrate:status"
